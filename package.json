{
  "name": "short-url",
  "type": "module",
  "version": "0.0.4",
  "packageManager": "pnpm@10.22.0",
  "description": "short url server",
  "author": "Mojie",
  "license": "MIT",
  "keywords": [
    "short-url",
    "short-link",
    "url",
    "short"
  ],
  "scripts": {
    "dev": "pnpm node --experimental-strip-types --no-warnings --watch ./src/main.ts",
    "release": "bumpp --commit --push --tag --no-verify",
    "lint": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.10.1",
    "bumpp": "^10.3.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.ts": "sh -c 'tsc --noEmit'"
  }
}
